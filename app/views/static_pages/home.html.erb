<div class="split left">
  <div class="centered">
    <div class="left-text">
    <p><i class="fas fa-search fa-2x"></i>  Follow your interests.</p>
    <p><i class="fas fa-user-friends fa-2x"></i>  Hear what people are talking about.</p>
    <p><i class="far fa-comment-alt fa-2x"></i>  Join the conversation.</p>
    </div>
  </div>
</div>

<div class="split right">
  <div class="row">
    <%= form_for(:session, :html => { class:"form-inline", role:"form" }, url: login_path ) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class:"form-control", placeholder:"Password", autocomplete: "off" %>
      </div>
      <%= button_to "Log in", login_path, class:"btn btn-primary" %>
    <% end %>
  </div>
  <div class="row">
  <div class="centered">
    <div align="left" class="right-text">
      <h2>See whatâ€™s happening in the world right now</h2>
      <p>Join Twitter today.</p>
    </div>
      <div align="center" class="button center">
      <%= link_to "Sign Up", signup_path, class:"btn btn-signup btn-lg" %>
      </div>
      <div align="center" class="button center">
      <%= link_to "Log In", login_path, class:"btn btn-login btn-lg" %>
      </div>
  </div>
  </div>
</div>
