<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <% obj.each do |tweet| %>
      <div class="well">
        <p><%= link_to simple_format(tweet.content), tweet_path(tweet) %></p>
        <div class="tweet-meta">
          <small>Created by: <%= tweet.user.username if tweet.user %>,
                      <%= time_ago_in_words(tweet.created_at) %> ago,
          last updated: <%= time_ago_in_words(tweet.updated_at) %> ago</small>
        </div>
        <% if logged_in? && current_user == tweet.user %>
        <div class="tweet-actions">
          <p><%= link_to "Edit", edit_tweet_path(tweet), class:"btn btn-primary btn-xs" %>Â 
            <%= link_to "Delete", tweet_path(tweet), method: :delete,
                                data: { confirm: "Are you sure you want to delete this tweet?" },
                                class:"btn btn-danger btn-xs"%></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
