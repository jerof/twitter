<h1 align="center">View tweet</h1>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <div class="well well-lg">
      <h3><%= link_to @tweet.content %></h3>
      <% if @tweet.user %>
      <ul class="listing">
        <div class="row center">
          <div class="col-md-4 col-md-offset-4">
            <li>Tweeted by:</li>
            <li><%= link_to gravatar_for(@tweet.user), user_path(@tweet.user) %></li>
            <li class="tweet-title">
              <%= link_to @tweet.user.username, user_path(@tweet.user) %>
            </li>
            <li>
              <small>
                <%= pluralize(@tweet.user.tweets.count, "tweet") if @tweet.user.tweets %>
              </small>
            </li>
          </div>
        </div>
      </ul>
      <% end %>
      <% if logged_in? && current_user == @tweet.user %>
      <div class="tweet-actions">
        <p><%= link_to "Edit", edit_tweet_path(@tweet), class:"btn btn-primary btn-xs" %>Â 
          <%= link_to "Delete", tweet_path(@tweet), method: :delete,
                              data: { confirm: "Are you sure you want to delete this tweet?" },
                              class:"btn btn-danger btn-xs"%></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
